{
  "expo": {
    "name": "Salati",
    "slug": "salati",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/SalatiLogo.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/SalatiLogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#5D71E2"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "notification": {
      "icon": "./assets/SalatiLogo.png",
      "color": "#5D71E2",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "Salati Prayer Reminder"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.salati.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Salati needs access to your location to calculate accurate prayer times and determine the Qibla direction for your current position.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Salati uses your location to provide accurate prayer times and Qibla direction based on your current position.",
        "NSLocationAlwaysUsageDescription": "Salati needs location access to calculate prayer times and Qibla direction for your area.",
        "UIBackgroundModes": [
          "background-fetch",
          "background-processing"
        ],
        "BGTaskSchedulerPermittedIdentifiers": [
          "com.salati.background-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/SalatiLogo.png",
        "backgroundColor": "#5D71E2"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ],
      "package": "com.salati.app"
    },
    "web": {
      "favicon": "./assets/SalatiLogo.png"
    },
    "plugins": [
      "expo-location",
      "expo-sensors",
      "expo-font"
    ]
  }
}
